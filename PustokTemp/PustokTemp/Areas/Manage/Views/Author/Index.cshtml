@model List<Author>
@{
    ViewData["Title"] = "Index";
    int order = 0;
}



<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Authors</h1>
        <a asp-action="create" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Fullname</th>
                <th scope="col">Image</th>
                <th scope="col">BooksCount</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@author.FullName</td>
                    <td><img src="~/uploads/author/@author.Image" style="max-width:100px" alt="Alternate Text" /></td>
                    <td>@author.Books.Count()</td>
                    <td>
                        <a asp-action="edit" asp-route-id="@author.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="deletefetch" asp-route-id="@author.Id" class="btn btn-danger btn-item-delete">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

