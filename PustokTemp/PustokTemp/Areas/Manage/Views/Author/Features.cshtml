@model List<Feature>
@{
    ViewData["Title"] = "Index";
    int order = 0;
}

<h1>Features</h1>


<div class="container-fluid">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Feature Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var features in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@features.Title</td>
                </tr>
            }

        </tbody>
    </table>
</div>