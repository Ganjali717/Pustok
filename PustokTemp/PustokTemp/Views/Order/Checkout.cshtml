@model CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
    double totalPrice = 0;
}


<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Checkout</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<main id="content" class="page-section inner-page-sec-padding-bottom space-db--20">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Checkout Form s-->
                <div class="checkout-form">
                    <div class="row row-40">
                        <div class="col-12">
                            <h1 class="quick-title">Checkout</h1>
                        </div>
                        <div class="col-lg-7 mb--20">
                            <!-- Billing Address -->
                            <div id="billing-form" class="mb-40">
                                <h4 class="checkout-title">Billing Address</h4>
                                <form method="post" id="order-form">
                                    <div class="row">
                                        <div class="col-md-6 col-12 mb--20">
                                            <label asp-for="FullName">Full Name*</label>
                                            <input asp-for="FullName" type="text" placeholder="Full Name">
                                        </div>
                                        <div class="col-md-6 col-12 mb--20">
                                            <label asp-for="Email">Email Address*</label>
                                            <input asp-for="Email" type="email" placeholder="Email Address">
                                        </div>
                                        <div class="col-md-6 col-12 mb--20">
                                            <label asp-for="Phone">Phone no*</label>
                                            <input asp-for="Phone" placeholder="Phone number">
                                        </div>
                                        <div class="col-md-6 col-12 mb--20">
                                            <label asp-for="City">Town/City*</label>
                                            <input asp-for="City" type="text" placeholder="Town/City">
                                        </div>
                                        <div class="col-12 mb--20">
                                            <label asp-for="Address">Address*</label>
                                            <input asp-for="Address" type="text" placeholder="Address line 1">
                                        </div>
                                        <div class="col-md-6 col-12 mb--20">
                                            <label asp-for="ZipCode">Zip Code*</label>
                                            <input asp-for="ZipCode" type="text" placeholder="Zip Code">
                                        </div>
                                    </div>
                                    <div class="order-note-block mt--30">
                                        <label asp-for="Note">Order notes</label>
                                        <textarea asp-for="Note" cols="30" rows="10" class="order-note"
                                                  placeholder="Notes about your order, e.g. special notes for delivery."></textarea>
                                    </div>
                                </form>

                            </div>

                        </div>
                        <div class="col-lg-5">
                            <div class="row">
                                <!-- Cart Total -->
                                <div class="col-12">
                                    <div class="checkout-cart-total">
                                        <h2 class="checkout-title">YOUR ORDER</h2>
                                        <h4>Product <span>Total</span></h4>
                                        <ul>
                                            @foreach (var item in Model.BasketItemViewModels)
                                            {
                                                double price = item.Count * item.Price;
                                                totalPrice += price;
                                                <li>
                                                    <span class="left">@item.Name X @item.Count</span> <span class="right">$@price</span>
                                                </li>
                                            }

                                        </ul>

                                        <h4>Grand Total <span>$@totalPrice</span></h4>
                                        <button type="submit" form="order-form" class="place-order w-100">Place order</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
