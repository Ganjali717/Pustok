@{
    Layout = null;
    double totalCount = 0;
    foreach (var item in Model)
    {
       totalCount += item.Price * item.Count;
    }
}
@model List<BasketItemViewModel>

<div class="cart-total">
    <span class="text-number">
        @Model.Count
    </span>
    <span class="text-item">
        Shopping Cart
    </span>
    <span class="price">
        £@totalCount
        <i class="fas fa-chevron-down"></i>
    </span>
</div>
<div class="cart-dropdown-block">
    <div class=" single-cart-block ">

        @foreach (var item in Model)
        {
            <div class="cart-product">
                <a href="product-details.html" class="image">
                    <img src="~/assets/image/products/@item.Image" alt="">
                </a>
                <div class="content">
                    <h3 class="title">
                        <a href="product-details.html">
                            @item.Name
                        </a>
                    </h3>
                    <p class="price"><span class="qty">@item.Count ×</span> £@item.Price</p>
                    <a asp-action="deletebook" asp-controller="book" asp-route-id="@item.BookId" data-id="@item.BookId" class="cross-btn"><i class="fas fa-times"></i></a>
                </div>
            </div>
        }
    </div>
    <div class=" single-cart-block ">
        <div class="btn-block">
            <a href="cart.html" class="btn">
                View Cart <i class="fas fa-chevron-right"></i>
            </a>
            <a href="checkout.html" class="btn btn--primary">
                Check Out <i class="fas fa-chevron-right"></i>
            </a>
        </div>
    </div>
</div>
